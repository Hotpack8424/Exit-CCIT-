{
  "manifest_version": 3,
  "name": "유해 사이트 차단",
  "version": "1.0",
  "description": "불법 및 유해 사이트 접속을 차단하여 안전한 인터넷 환경을 제공합니다.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "webRequest",
    "webNavigation"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "image/image16.png",
      "48": "image/image48.png",
      "64": "image/image64.png",
      "128": "image/image128.png"
    }
  },
  "icons": {
    "16": "image/image16.png",
    "48": "image/image48.png",
    "64": "image/image64.png",
    "128": "image/image128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["BlockedPage.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
